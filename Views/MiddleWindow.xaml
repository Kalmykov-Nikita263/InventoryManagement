<Window x:Class="InventoryManagement.Views.MiddleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Меню" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!--занимает все доступное место по вертикали-->
            <RowDefinition Height="Auto"/>
            <!--Высота будет автоматически подстроена под контент-->
        </Grid.RowDefinitions>

        <Label x:Name="lbWelcome" Content="" HorizontalAlignment="Center" Margin="40"></Label>
        
        <StackPanel VerticalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="btnInventories" Content="Инвентаризация" Width="200" Height="40" Margin="0,0,0,10"/>
            <Button x:Name="btnAssets" Content="Имущество" Width="200" Height="40" Margin="0,0,0,10"/>
            <Button x:Name="btnExit" Content="Выход" Width="200" Height="40"/>
        </StackPanel>

    </Grid>
</Window>
