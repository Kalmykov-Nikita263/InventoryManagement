<Window x:Class="InventoryManagement.Views.MiddleWindowAdministrator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Меню" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!--занимает все доступное место по вертикали-->
            <RowDefinition Height="Auto"/>
            <!--Высота будет автоматически подстроена под контент-->
        </Grid.RowDefinitions>

        <Label Content="Добро пожаловать, Администратор" HorizontalAlignment="Center" Margin="10"></Label>
        
        <StackPanel VerticalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="btnInventories" Content="Инвентаризация" Width="200" Height="40" Margin="0,0,0,10" Click="btnInventories_Click"/>
            <Button x:Name="btnAssets" Content="Имущество" Width="200" Height="40" Margin="0,0,0,10" Click="btnAssets_Click"/>
            <Button x:Name="btnUsers" Content="Пользователи" Width="200" Height="40" Margin="0,0,0,10" Click="btnUsers_Click"/>
            <Button x:Name="btnExit" Content="Выход" Width="200" Height="40" Click="btnExit_Click"/>
        </StackPanel>
    </Grid>
</Window>
